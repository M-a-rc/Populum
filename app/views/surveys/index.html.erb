<h1>Surveys index</h1>


<% @surveys.each do |survey| %>
  <div class="container">
    <%= link_to survey_path(survey) do %>
      <div class="card">
        <div class="card-header">
          <h3><%= survey.title %></h3>
        </div>
        <div class="card-body">
          <p>ID: <%= survey.id %> </p>
          <p class="card-text"><%= survey.overview %></p>
          <%= link_to "Modifier sondage", edit_survey_path(survey), class:"btn btn-primary"%>
          <%= link_to "Supprimer sondage", survey_path(survey), method: :DELETE, class:"btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
