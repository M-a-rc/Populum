<% if votes_count == 0 %>

<%= votes_count %>
  <%= simple_form_for([ suggestion, comment_vote ], remote: true) do |f| %>
      <%= f.input :value, :label => false, input_html: {value: "-1", :class => 'd-none'} %>
      <%= f.input :comment_id, :label => false, input_html: {value: comment.id, :class => 'd-none'}  %>
      <%= f.button :submit,"Downvote" %>
    <% end %>
    <%= simple_form_for([ suggestion, comment_vote ], remote: true) do |f| %>
      <%= f.input :value, :label => false,  input_html: {value: "+1", :class => 'd-none'} %>
      <%= f.input :comment_id, :label => false, input_html: {value: comment.id, :class => 'd-none'}  %>
      <%= f.button :submit,"Upvote" %>
    <% end %>

<% else %>
  <% @countVal = current_user.comment_votes.where( comment: comment).last%>
  <% if @countVal %>
    <% if @countVal.value != "+1" %>
      <%= simple_form_for([ suggestion, comment_vote ], remote: true) do |f| %>
        <%= f.input :value, :label => false,  input_html: {value: "+1", :class => 'd-none'} %>
         <%= f.input :comment_id, :label => false, input_html: {value: comment.id, :class => 'd-none'}  %>
        <%= f.button :submit,"Upvote" %>
      <% end %>
      <%= votes_count %>
      <%= link_to "Downvote" %>
    <% else %>
      <%= link_to "Upvote" %>
      <%= votes_count %>
      <%= simple_form_for([ suggestion, comment_vote ], remote: true) do |f| %>
        <%= f.input :value, :label => false, input_html: {value: "-1", :class => 'd-none'} %>
         <%= f.input :comment_id, :label => false, input_html: {value: comment.id, :class => 'd-none'}  %>
        <%= f.button :submit,"Downvote" %>
      <% end %>
    <% end %>
  <% else %>
    <%= simple_form_for([ suggestion, comment_vote ], remote: true) do |f| %>
      <%= f.input :value, :label => false, input_html: {value: "-1", :class => 'd-none'} %>
       <%= f.input :comment_id, :label => false, input_html: {value: comment.id, :class => 'd-none'}  %>
      <%= f.button :submit,"Downvote" %>
    <% end %>
    <%= votes_count %>
    <%= simple_form_for([ suggestion, comment_vote ], remote: true) do |f| %>
      <%= f.input :value, :label => false,  input_html: {value: "+1", :class => 'd-none'} %>
       <%= f.input :comment_id, :label => false, input_html: {value: comment.id, :class => 'd-none'}  %>
      <%= f.button :submit,"Upvote" %>
    <% end %>
  <% end %>
<% end %>
