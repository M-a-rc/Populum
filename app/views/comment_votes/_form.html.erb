<%= votes_count %>

<% @countVal = current_user.comment_votes.where( comment: comment).last%>
<% if @countVal %>
  <% if @countVal.value != "+1" %>
    <%= simple_form_for([ comment, comment_vote ], remote: true) do |f| %>
      <%= f.input :value, :label => false,  input_html: {value: "+1", :class => 'd-none'} %>
      <%= f.button :submit,"Upvote" %>
    <% end %>
    <%= link_to "Downvote" %>
  <% else %>
    <%= link_to "Upvote" %>
    <%= simple_form_for([ comment, comment_vote ], remote: true) do |f| %>
      <%= f.input :value, :label => false, input_html: {value: "-1", :class => 'd-none'} %>
      <%= f.button :submit,"Downvote" %>
    <% end %>
  <% end %>
<% else %>
  <%= simple_form_for([ comment, comment_vote ], remote: true) do |f| %>
    <%= f.input :value, :label => false, input_html: {value: "-1", :class => 'd-none'} %>
    <%= f.button :submit,"Downvote" %>
  <% end %>
  <%= simple_form_for([ comment, comment_vote ], remote: true) do |f| %>
    <%= f.input :value, :label => false,  input_html: {value: "+1", :class => 'd-none'} %>
    <%= f.button :submit,"Upvote" %>
  <% end %>
<% end %>
