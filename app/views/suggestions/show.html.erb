<div class="container">

  <div class="card-suggestion">
    <div class="card-suggestion-left">
      <div class="card-suggestion-top">
        <%= image_tag "Enor2.png", class: "avatar" %>
        <%= @suggestion.address %>
        <%= @suggestion.status %>
        <h5><%= @suggestion.title %></h5>
      </div>
      <div class= "card-suggestion-body">
        <p class= "text"><%= @suggestion.content%></p>
      </div>
    </div>
    <div class= "votes">
      <%= link_to suggestion_upvote_path(@suggestion) do %>
        <i class="fa-solid fa-angle-up"></i>
      <% end %>
      <p><%= @suggestion.weighted_score %></p>
      <%= link_to suggestion_downvote_path(@suggestion) do %>
        <i class="fa-solid fa-angle-down"></i>
      <% end %>
    </div>
  </div>

  <h3>Comments:</h3>

  <% @suggestion.comments.each do |comment| %>
    <div class="card-suggestion mb-3">
      <div class="card-body">
        <h5><%= comment.user.first_name %></h5>
        <hr>
        <p> <%= comment.content %>
      </div>
      <div class= "votes">
      <%= link_to comment_upvote_path(comment) do %>
        <i class="fa-solid fa-angle-up"></i>
      <% end %>
      <p><%= comment.weighted_score %></p>
      <%= link_to comment_downvote_path(comment) do %>
        <i class="fa-solid fa-angle-down"></i>
      <% end %>
    </div>
    </div>
  <% end %>


  <%= link_to 'Back', url_for(:back), class: "btn btn-outline-primary mb-3" %>
  <%#= link_to "Back", suggestions_path,class: "btn btn-outline-primary mb-3" %>
</div>
