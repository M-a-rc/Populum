<% @suggestions.each do |suggestion| %>
  <%= link_to suggestion_path(suggestion) do %>
  <div class="card-suggestion" id= <%="suggestion-#{suggestion.id}"%> >
    <div class="card-suggestion-left">
      <div class="card-suggestion-top">
        <%= image_tag "Enor2.png", class: "avatar" %>
        <h5><%= suggestion.title %></h5>
      </div>
      <div class= "card-suggestion-body">
        <p class= "text"><%= suggestion.content[0, 50]%>... <span class="voir-plus">Voir plus</span></p>
      </div>
    </div>
    <div class= "votes">
      <%= link_to suggestion_upvote_path(suggestion) do %>
        <i class="fa-solid fa-angle-up"></i>
      <% end %>
      <p><%= suggestion.weighted_score %></p>
      <%= link_to suggestion_downvote_path(suggestion) do %>
        <i class="fa-solid fa-angle-down"></i>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
