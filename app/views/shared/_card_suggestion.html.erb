
<% @suggestions.each do |suggestion| %>
  <%= link_to suggestion_path(suggestion) do %>
  <div class="card-suggestion">
    <%= image_tag "Enor2.png", class: "avatar" %>
    <h5><%= suggestion.title %></h5>
    <div class= "card-suggestion-body">
      <p class= "text"><%= suggestion.content[0, 50]%>... Voir plus</p>
        <div class= "votes">
          <i class="fa-solid fa-angle-up"></i>
          <%= render "suggestion_votes/form", votes_count: suggestion.suggestion_votes.pluck(:value).map(&:to_i).sum, suggestion: suggestion %>
          <p><%= suggestion.votes %></p>
          <i class="fa-solid fa-angle-down"></i>
        </div>
    </div>

  </div>
  <% end %>
<% end %>
